{
    "compilerOptions": {
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "outDir": "dist",
        "rootDir": ".",
        "declaration": true
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
